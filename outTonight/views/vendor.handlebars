<div id="vendor">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <br>
        <a href="/">
          <h1 id="branding" class="glow">Out Tonight - So Cal</h1>
        </a>
        <br>
        <h3>Create an Event Listing</h3>
        <br>
        <form class="clearfix mb-4" action="POST">
          <form>
            <div class="form-group">
              <label for="eventName">Event Name</label>
              <input type="text" class="form-control" id="eventName" placeholder="">
            </div>

            <div class="form-group">
              Date of Event
              <div class="form-control">
                <input type="date" name="date" id="eventDate">
              </div>
            </div>

            <div class="form-group">
              <label for="timeOfEvent">Event Time</label>
              <input type="time" class="form-control" id="eventTime" placeholder="Military Time: 0000-2400">
            </div>

            <div class="form-group">
              <label for="eventType">Event Type</label>
              <select class="form-control" id="eventType">
                <option selected disabled hidden>Select an Option</option>
                <option value="Music">Music</option>
                <option value="Conference">Conference</option>
                <option value="Theatre">Theatre</option>
                <option value="Family">Family</option>
                <option value="Sports">Sports</option>
                <option value="Festival">Festival</option>
                <option value="Comedy">Comedy</option>
              </select>
            </div>

            <div class="form-group">
              <label for="eventLocation">Event Location</label>
              <input type="text" class="form-control" id="eventLocation" placeholder="">
            </div>

            <div class="form-group">
              <label for="eventDescription">Event Description</label>
              <textarea class="form-control" id="eventDescription" rows="3"></textarea>
            </div>

            <div class="form-group">
              <label for="eventCost">Event Cost $</label>
              <input type="text" class="form-control" id="eventCost" placeholder="0-250">
            </div>
            <br>
            <button id="submitNewEvent" class="btn btn-dark">Submit</button>
          </form>
          <br>
          </ul>
      </div>
    </div>
  </div>
</div>


<script src="/js/index.js"></script>
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>Create an Event Listing</h1>
        {{!-- <h2></h2> --}}
        <form class="clearfix mb-4" action="POST">
          <form>
            <div class="form-group">
              <label for="eventName">Event Name</label>
              <input type="text" class="form-control" id="eventName" placeholder="Coachella Music Festival">
            </div>

            <div class="form-group">
              Date of Event:
              <div class="form-control">
                <input type="date" name="bday">
              </div>
            </div>

            <div class="form-group">
              <label for="exampleFormControlInput1">Event Time</label>
              <input type="text" class="form-control" id="eventName" placeholder="0000-2400">
            </div>

            <div class="form-group">
              <label id="eventType">Event Type</label>
              <select class="form-control" id="exampleFormControlSelect1">
                <option value="Music">Music</option>
                <option value="Convention">Convention/Business/Conference</option>
                <option value="Theatre">Theatre</option>
                <option value="Family">Family</option>
                <option value="Sports">Sports</option>
                <option value="Festival">Festival</option>
                <option value="Comedy">Comedy</option>
              </select>
            </div>

            <div class="form-group">
              <label id="eventLocation">Event Location</label>
              <input type="text" class="form-control" id="eventName" placeholder="Staples Center">
            </div>


            <div class="form-group">
              <label id="eventDescription">Event Description</label>
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
          </form>

          <div class="form-group">
            <label for="eventCost">Event Cost</label>
            <input type="text" class="form-control" id="eventName" placeholder="$0-$250">
          </div>

          <button id="submitNewEvent" class="btn btn-dark">Submit</button>
        </form>
        <br>
        <h1 id="events">Events:</h1>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>